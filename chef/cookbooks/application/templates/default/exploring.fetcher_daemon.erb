#!/bin/sh
# Comments to support chkconfig on Red Hat Linux
# chkconfig: 2345 64 36
# Description: <%= node.default['application']['exploring']['fetcher']['name'] %>

start () {
    echo "Starting <%= node.default['application']['exploring']['fetcher']['name'] %>... "

    daemon --name='<%= node.default['application']['exploring']['fetcher']['name'] %>' \
           --command='<%= node.default['application']['virtual_env'] %>/bin/python <%= node.default['application']['sources_dir'] %>/fetcher/__init__ --port=<%= node.default['application']['exploring']['fetcher']['port'] %> --log_path=<%= node.default['application']['exploring']['fetcher']['log'] %> --pidfile_path=<%= node.default['application']['exploring']['fetcher']['pid_file'] %>' \
	   --env="PYTHONPATH=<%= node.default['application']['sources_dir'] %>:<%= node.default['application']['sources_dir'] %>/interface_server:<%= node.default['application']['sources_dir'] %>/gen/py" \
	   --env="DJANGO_SETTINGS_MODULE=interface_server.settings" \
           --pidfile='<%= node.default['application']['exploring']['fetcher']['daemon']['pid_file'] %>' \
           --user='<%= node.default['application']['api_serving']['user'] %>' \
           --chdir='<%= node.default['application']['work_dir'] %>' \
           --unsafe \
           --respawn \
           --errlog='<%= node.default['application']['exploring']['fetcher']['daemon']['error_log'] %>' \
           --dbglog='<%= node.default['application']['exploring']['fetcher']['daemon']['debug_log'] %>' \
           --verbose
    return $?
}

stop () {
    echo "Stopping <%= node.default['application']['exploring']['fetcher']['name'] %>... "

    daemon --name='<%= node.default['application']['exploring']['fetcher']['name'] %>' \
           --pidfile='<%= node.default['application']['exploring']['fetcher']['daemon']['pid_file'] %>' \
           --stop \
           --verbose
    return $?
}


restart () {
    echo "Restarting <%= node.default['application']['exploring']['fetcher']['name'] %>..."

    daemon --name='<%= node.default['application']['exploring']['fetcher']['name'] %>' \
           --pidfile='<%= node.default['application']['exploring']['fetcher']['daemon']['pid_file'] %>' \
           --restart  \
           --verbose
    return $?
}


status () {
    daemon --name='<%= node.default['application']['exploring']['fetcher']['name'] %>' \
           --pidfile='<%= node.default['application']['exploring']['fetcher']['daemon']['pid_file'] %>' \
           --running \
           --verbose
    return $?
}


case "$1" in
    start)
        start
    ;;
    status)
        status
    ;;
    stop)
        stop
    ;;
    restart)
        restart
    ;;
    *)
        echo $"Usage: <%= node.default['application']['exploring']['fetcher']['name'] %> {start|status|stop|restart}"
        exit 3
    ;;
esac

exit $RETVAL
