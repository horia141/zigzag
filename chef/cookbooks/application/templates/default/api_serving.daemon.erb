#!/bin/sh
# Comments to support chkconfig on Red Hat Linux
# chkconfig: 2345 64 36
# Description: <%= node.default['application']['api_serving']['name'] %>

start () {
    echo "Starting <%= node.default['application']['api_serving']['name'] %>... "

    daemon --name='<%= node.default['application']['api_serving']['name'] %>' \
           --command='lighttpd -D -f <%= node.default['application']['api_serving']['config'] %>' \
           --pidfile='<%= node.default['application']['api_serving']['daemon']['pid_file'] %>' \
           --user='<%= node.default['application']['api_serving']['user'] %>' \
           --chdir='<%= node.default['application']['api_serving']['work_dir'] %>' \
           --safe \
           --respawn \
           --errlog='<%= node.default['application']['api_serving']['daemon']['error_log'] %>' \
           --dbglog='<%= node.default['application']['api_serving']['daemon']['debug_log'] %>' \
           --verbose
    return $?
}

stop () {
    echo "Stopping <%= node.default['application']['api_serving']['name'] %>... "

    daemon --name='<%= node.default['application']['api_serving']['name'] %>' \
           --pidfile='<%= node.default['application']['api_serving']['daemon']['pid_file'] %>' \
           --stop \
           --verbose
    return $?
}


restart () {
    echo "Restarting <%= node.default['application']['api_serving']['name'] %>..."

    daemon --name='<%= node.default['application']['api_serving']['name'] %>' \
           --pidfile='<%= node.default['application']['api_serving']['daemon']['pid_file'] %>' \
           --restart  \
           --verbose
    return $?
}


status () {
    daemon --name='<%= node.default['application']['api_serving']['name'] %>' \
           --pidfile='<%= node.default['application']['api_serving']['daemon']['pid_file'] %>' \
           --running \
           --verbose
    return $?
}


case "$1" in
    start)
        start
    ;;
    status)
        status
    ;;
    stop)
        stop
    ;;
    restart)
        restart
    ;;
    *)
        echo $"Usage: <%= node.default['application']['api_serving']['name'] %> {start|status|stop|restart}"
        exit 3
    ;;
esac

exit $RETVAL
