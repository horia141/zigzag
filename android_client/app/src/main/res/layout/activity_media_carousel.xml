<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MediaCarousel"
        tools:ignore="MergeRootFrame">

        <android.support.v4.view.ViewPager
            android:id="@+id/artifacts_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        style="@style/MediaCarouselDrawer">

        <ImageView
            android:src="@drawable/ic_launcher"
            android:contentDescription="@string/startup_icon_description"
            android:paddingTop="54dp"
            android:paddingLeft="84dp"
            android:paddingRight="84dp"
            android:paddingBottom="54dp"
            android:layout_width="240dp"
            android:layout_height="180dp"
            style="@style/StartUpImageBackground" />

        <TextView
            android:id="@+id/drawer_home"
            android:text="@string/activity_media_carousel_drawer_home"
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/drawer_preferences"
            android:text="@string/activity_media_carousel_drawer_preferences"
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/drawer_terms_and_conditions"
            android:text="@string/activity_media_carousel_drawer_terms_and_conditions"
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/drawer_about"
            android:text="@string/activity_media_carousel_drawer_about"
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/drawer_share_app"
            android:text="@string/activity_media_carousel_drawer_share_app"
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" />

        <Space
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/drawer_copyright"
            android:text="@string/copyright"
            android:layout_width="240dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            style="@style/MediaCarouselDrawerCopyright"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
