<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MediaCarousel$PlaceholderFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/background_white">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="80dp"
            android:layout_width="fill_parent"
            android:background="@color/background_black"
            android:paddingTop="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="64dp"
                android:text="@string/fragment_media_carousel_title"
                android:id="@+id/title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:lines="2"
                android:paddingTop="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/text_white" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/fragment_media_carousel_save_button"
                android:src="@drawable/ic_save"
                android:id="@+id/save_button"
                android:paddingTop="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="24dp" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/fragment_media_carousel_share_button"
                android:src="@drawable/ic_share"
                android:id="@+id/share_button"
                android:paddingTop="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="24dp" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/fragment_media_carousel_next_button"
                android:src="@drawable/ic_next"
                android:id="@+id/next_button"
                android:paddingTop="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="24dp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/waiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="gone"/>

        <ListView
            android:id="@+id/image_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/background_white"/>

    </LinearLayout>
</RelativeLayout>
