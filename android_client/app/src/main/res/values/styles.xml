<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="ZigZagStartUpTheme" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:background">@color/background_black</item>
    </style>

    <style name="ZigZagMediaCarouselTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ZigZagActionBarTheme</item>
        <item name="android:colorBackground">@color/background_white</item>
        <item name="android:windowBackground">@color/background_white</item>
    </style>

    <style name="PrincipalFragmentBackground">
        <item name="android:background">@color/background_white</item>
    </style>

    <style name="MediaCarouselDrawer">
        <item name="android:background">@color/background_white</item>
    </style>

    <style name="MediaCarouselDrawerSelected">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:background">@color/action_bar_blue</item>
    </style>

    <style name="MediaCarouselDrawerUnselected">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:background">@color/background_white</item>
    </style>

    <style name="MediaCarouselDrawerInactive">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="MediaCarouselDrawerCopyright">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="TransparentBackground">
        <item name="android:background">@color/background_white_transparent</item>
    </style>

    <!-- Action bar theme. -->
    <style name="ZigZagActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/ZigZagActionBarTitleTheme</item>
        <item name="android:background">@color/action_bar_blue</item>
    </style>

    <style name="ZigZagActionBarTitleTheme" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!-- Styles for the artifact title and surrounding components -->
    <style name="ArtifactContentZone">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">16dp</item>
    </style>

    <style name="ArtifactTitleZone">
        <item name="android:background">@drawable/artifact_zone_background</item>
    </style>

    <style name="ArtifactTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="ArtifactSourceName">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_link</item>
    </style>

    <style name="ArtifactTimeAdded">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:gravity">right</item>
    </style>

    <!-- Styles for the artifact content -->
    <style name="PhotoDescriptionView">
        <item name="android:background">@drawable/artifact_zone_background</item>
    </style>

    <style name="PhotoDescriptionViewBorder">
        <item name="android:padding">1dp</item>
        <item name="android:background">@color/border_black_transparent</item>
    </style>

    <style name="PhotoDescriptionViewSubtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="PhotoDescriptionViewDescription">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>
</resources>
